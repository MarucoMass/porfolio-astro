---
import Heading from "../components/Heading.astro";
import SectionContainer from "../components/SectionContainer.astro";

const stack = {
  Frontend: [
    "HTML5",
    "CSS3",
    "Tailwind CSS",
    "JavaScript",
    "jQuery",
    "React JS",
    "Bootstrap",
  ],
  Backend: ["PHP", "Python", "C#", ".NET"],
  "Base de datos": ["SQL"],
  "Herramientas y otras tecnologías": [
    "Git",
    "Figma",
    "Wordpress",
    "Salesforce",
  ],
  "Sistemas operativos": ["Windows", "Linux"],
};
