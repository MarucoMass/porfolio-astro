  class={`
flex justify-center items-center gap-x-2 
py-2 px-4 
rounded-lg border-2 border-black dark:border-white/10 
bg-transparent font-bold
hover:scale-110  hover:bg-black/10 dark:hover:bg-white/10 transition
`}
  href={href}
  target="_blank"
  rel="noopener noreferrer"
>
  <slot />
</a>

