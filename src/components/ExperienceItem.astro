---
interface Props {
  title: string;
  description: string;
  date: string;
  company: string;
  link?: string;
  img?: string;
}

const { title, description, date, company, link, img } = Astro.props;
---

<!-- <div class="absolute w-3 h-3 bg-black rounded-full mt-1.5 -start-1.5 border border-white/75 dark:border-gray-900 dark:bg-gray-700"></div> -->
<article class="grid grid-cols-1 xl:grid-cols-2 grid-flow-row gap-2">
  <h3
    class="text-lg font-bold text-black bg-white/55 xl:col-span-2 dark:text-white shadow-sm"
  >
    {title}
  </h3>
  <h4 class="text-base font-semibold text-gray-900 bg-white/55 dark:text-white shadow-sm">
    {company}
  </h4>
  <time
    class="text-base font-normal bg-white/55 text-gray-500 dark:text-gray-500 shadow-sm flex items-center"
    >{date}</time
  >
  <p
    class="text-base font-normal text-gray-700 bg-white/55 dark:text-gray-400 text-pretty shadow-sm"
  >
    {description}
  </p>
  {
    img && link ?
          <a class={`cursor-pointer relative min-h-48 shadow-sm`} href={link}>
            <img
              src={img}
              alt=`imágen de ${company}`
              class="absolute inset-0 h-full w-full object-cover rounded-lg"
            />
          Click
          </a> :
          <div class={`relative min-h-48 shadow-sm`}>
            <img
              src={img}
              alt=`imágen de ${company}`
              class="absolute inset-0 h-full w-full object-cover rounded-lg"
            />
          </div> 

  }
</article>

<style>
  article > * {
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
  }
  a::after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* background: linear-gradient(to top, rgba(0,0,0,0.4), transparent ); */
  }
</style>
