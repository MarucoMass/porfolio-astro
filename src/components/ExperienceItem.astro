---
interface Props {
  title: string;
  description: string;
  date: string;
  company: string;
  link: string;
  img: string;
}

const { title, description, date, company, link, img } = Astro.props;
---

<!-- <div class="absolute w-3 h-3 bg-black rounded-full mt-1.5 -start-1.5 border border-white/75 dark:border-gray-900 dark:bg-gray-700"></div> -->
<article class="grid grid-cols-1 xl:grid-cols-2 grid-flow-row gap-2">
  <h3
    class="text-lg font-bold text-black bg-white/55 xl:col-span-2 dark:text-white"
  >
    {title}
  </h3>
  <h4 class="text-base font-semibold text-gray-900 bg-white/55 dark:text-white">
    {company}
  </h4>
  <time
    class="text-base font-normal bg-white/55 text-gray-600 dark:text-gray-500"
    >{date}</time
  >
  <p
    class="text-base font-normal text-gray-500 bg-white/55 dark:text-gray-400 text-pretty"
  >
    {description}
  </p>
  <a class={`cursor-pointer relative h-48`} href={link}>
    <img
      src={img}
      alt=`imÃ¡gen de ${company}`
      class="absolute inset-0 h-full w-full object-cover rounded-lg"
    />
  </a>
</article>

<style>
  article > * {
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
  }
</style>
