---
interface Props {
  title: string
  description: string
  date: string
  company: string
}

const { title, description, date, company } = Astro.props
---

<div class="absolute w-3 h-3 bg-black rounded-full mt-1.5 -start-1.5 border border-white/75 dark:border-gray-900 dark:bg-gray-700"></div>
<time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{date}</time>
<h3 class="text-lg font-bold text-black mt-2 dark:text-white">{title}</h3>
<h4 class="text-base font-medium text-gray-900 dark:text-white">{company}</h4>
<p class="mb-4 text-base font-normal text-gray-500 mt-1 dark:text-gray-400 text-pretty">{description}</p>
 

